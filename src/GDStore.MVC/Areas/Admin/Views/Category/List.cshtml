@model IEnumerable<GDStore.ViewModel.Categories.CategoryVm>
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="title-content">Quản lý danh mục</h1>

<div class="row mt-3 mb-3">
    <div class="col-md-2">
        <a class="btn btn-primary btn-add" data-toggle="modal" data-target="#modalAddUpdateCategory"><i class="fas fa-plus"></i> Thêm danh mục</a>
    </div>
    <div class="col-md-4 mb-2 p-0">
        <form action="" method="">
            <div class="input-group">
                <input type="text" class="form-control bg-light border-1 small"
                       placeholder="Nhập tên danh mục... " aria-label="Search"
                       aria-describedby="basic-addon2" required>
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th><input type="checkbox" name="" id=""> Chọn tất cả</th>
                <th>Tên danh mục</th>
                <th>Mô tả</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" name="" id=""></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="#" data-id="@item.Id" class="btn btn-warning btn-edit"><i class="fas fa-edit"></i></a>
                        <a href="#" data-id="@item.Id" class="btn btn-danger btn-delete"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="modalAddUpdateCategory">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Thêm/Sửa danh mục</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <form method="POST" id="frmAddUpdateCategory">
                        <div class="form-group">
                            <input type="hidden" id="hiddenId" />
                        </div>
                        <div class="form-group">
                            <label for="">Tên danh mục</label>
                            <input type="text" name="Name" id="txtName" placeholder="Tên danh mục" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Mô tả</label>
                            <input type="text" name="Description" id="txtDescription" placeholder="Mô tả" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success btn-save"><i class="fas fa-save"></i> Ghi lại</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="/admin/js/controller/category.js"></script>
}