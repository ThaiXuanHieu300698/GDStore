@model IEnumerable<GDStore.ViewModel.Users.UserVm>
@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="title-content">Danh sách người dùng</h1>
<div class="row mt-3 mb-3">
    <div class="col-md-2">
        <a asp-action="Add" asp-controller="User" asp-area="Admin" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm người dùng</a>
    </div>
    <div class="col-md-4 mb-2 p-0">
        <form action="" method="post">
            <div class="input-group">
                <input type="text" class="form-control bg-light border-1 small"
                       placeholder="Nhập tên người dùng... " aria-label="Search"
                       aria-describedby="basic-addon2" required>
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th><input type="checkbox" name="" id=""> Chọn tất cả</th>
                <th>Họ</th>
                <th>Tên</th>
                <th>Tên đăng nhập</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" name="" id=""></td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a asp-action="Edit" asp-controller="User" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-controller="User" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


