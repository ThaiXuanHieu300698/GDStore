<section class="comment">
    <div class="container">
        <div class="title">Đánh giá/Nhận xét</div>
        <div class="row">
            <div class="col-md-8">
                <form action="#" method="POST">
                    <div class="card">
                        <div class="card-body pb-0 pt-1 pl-1 pr-1">
                            <textarea class="comment-box w-100 p-2" rows="3"
                                      placeholder="Để lại nhận xét"></textarea>
                        </div>
                        <div class="card-footer pt-2 pb-2 pl-3">
                            <label for="chooseImg" class="btn-ChooseImg mt-2"><i class="fas fa-camera"></i> Gửi ảnh</label>
                            <input type="file" id="chooseImg" style="display: none;">
                            <button class="btn btn-primary btn-send-comment float-right">Gửi</button>
                        </div>
                    </div>
                    <div class="list-img-preview">
                        <ul>
                            <li class="img-preview mt-2">
                                <i class="fas fa-times deleteImg"></i>
                                <img src="~/img/product/male/product-2.webp" class="w-100" alt="">
                            </li>
                            <li class="img-preview mt-2">
                                <i class="fas fa-times deleteImg"></i>
                                <img src="~/img/product/male/product-2.webp" class="w-100" alt="">
                            </li>
                        </ul>
                    </div>
                </form>
                <hr>
            </div>
        </div>
        <ul class="list-comment-user">
            <li class="comment-item">
                <div class="comment-user">
                    <div class="user mb-2">
                        <img src="~/img/user/AvatarDefault-Male.png" alt="" style="width: 30px;">
                        <span class="ml-2"><strong>Hiếu XT</strong></span>
                    </div>
                    <div class="comment-content">
                        <p class="mb-0">Sản phẩm đẹp</p>
                    </div>
                    <div class="comment-action">
                        <a href="javascript:void(0)" class="respondent">Trả lời</a>
                        <a href="javascript:void(0)" class="comment-date">1 tuần</a>
                    </div>
                </div>
            </li>
            <li class="comment-item">
                <div class="comment-user">
                    <div class="user mb-2">
                        <img src="~/img/user/AvatarDefault-Female.png" alt="" style="width: 30px;">
                        <span class="ml-2"><strong>Bảo Trâm</strong></span>
                    </div>
                    <div class="comment-content">
                        <p class="mb-0">Giao hàng nhanh, giá cả phù hợp, đánh giá 5 sao</p>
                    </div>
                    <div class="comment-action">
                        <a href="javascript:void(0)" class="respondent">Trả lời</a>
                        <a href="javascript:void(0)" class="comment-date">1 tuần</a>
                    </div>
                </div>
            </li>
            <li class="comment-item">
                <div class="comment-user">
                    <div class="user mb-2">
                        <img src="~/img/user/AvatarDefault-Female.png" alt="" style="width: 30px;">
