@model GDStore.ViewModel.Products.ProductVm
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-rg">
    <div class="container p-0">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i> Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>
<section class="product-detail">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="img-default p-4">
                    <img src="@TempData["BackendUrl"]/user-content/@Model.ThumbnailImage.First().Url" class="w-100 img-default-product" alt="">
                </div>
                <div class="list-img d-flex justify-content-center">

                    <div class="img-item">
                        <img src="@TempData["BackendUrl"]/user-content/@Model.ThumbnailImage.First().Url" alt="" class="is-clicked">
                    </div>
                    @foreach (var item in Model.ThumbnailImage.Skip(1))
                    {
                        <div class="img-item">
                            <img src="@TempData["BackendUrl"]/user-content/@item.Url" alt="">
                        </div>
                    }
                    @*
                        <div class="img-item">
                            <img src="~/img/product/male/product-2_3.webp" alt="">
                        </div>
                        <div class="img-item">
                            <img src="~/img/product/male/product-2_4.jpg" alt="">
                        </div>*@
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-product pt-4">
                    <h1 class="product-name">@Model.Name</h1>
                    <div class="rg-price">
                        <span class="price"><strong>@String.Format("{0:#,0.#########}", Model.Price)₫</strong></span>
                        <del class="original-price ml-4">@String.Format("{0:#,0.#########}", Model.OriginalPrice)₫</del>
                        <label class="badge badge-warning ml-4">-50%</label>
                    </div>
                    <div class="rate">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                    <hr>
                    <div class="list-size">
                        <label class="mr-3">Kích thước:</label>
                        <span class="size-item">37</span>
                        <span class="size-item">38</span>
                        <span class="size-item">39</span>
                        <span class="size-item">40</span>
                        <span class="size-item">41</span>
                        <span class="size-item">42</span>
                    </div>
                    <div class="product-status">
                        <label class="mr-3 mt-2">Tình trạng:</label>
                        <span><strong>30</strong> Sản phẩm</span>
                    </div>
                    <div class="gift">
                        <label>Quà tặng :</label>
                        <div class="img-gift text-center" style="width: 100px">
                            <a href="#"><img class="w-100" src="~/img/gift/gift-1.webp" alt=""></a>
                        </div>
                        <p class="gift-name">Bình giữ nhiệt Elmich</p>
                    </div>
                </div>
                <div class="d-flex">
                    <a href="#" class="btn btn-buy" data-id="@Model.Id">Mua ngay</a>
                    <a href="#" class="btn btn-addToCart ml-2">Thêm vào giỏ hàng</a>
                </div>
            </div>
        </div>
    </div>
</section>
