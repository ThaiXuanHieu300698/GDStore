
@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact pt-65px">
    <div class="container">
        <div class="mt-3">
            <h5>Để lại lời nhắn cho chúng tôi</h5>
            <form action="">
                <div class="form-group">
                    <label for="">Họ và tên</label>
                    <input type="text" name="" id="" placeholder="Họ và tên" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="text" name="" id="" placeholder="Email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Lời nhắn</label>
                    <textarea name="" id="" rows="10" placeholder="Lời nhắn" class="form-control" style="resize: none;"></textarea>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-success">Gửi</button>
                </div>
            </form>
        </div>
    </div>
</section>
