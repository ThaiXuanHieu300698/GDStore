@{
    Layout = "_LayoutAccount";
}
<div class="container">
    <div class="panel-forgot-password">
        <div class="row">
            <div class="col-md-4">

            </div>
            <div class="col-md-4 p-0">
                <div class="col-main p-2">
                    <div class="form-fotgot-password">
                        <h5 class="text-center">Quên mật khẩu?</h5>
                        <p>Vui lòng cung cấp email hoặc số điện thoại đăng nhập để lấy lại mật khẩu.</p>
                        <form asp-action="ForgotPasswordHandle" asp-controller="Account" method="POST">
                            <div class="form-group">
                                <label>Email/SĐT</label>
                                <input type="text" name="" placeholder="Nhập Email hoặc Số điện thoại"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Gửi</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>