@{
    Layout = "_LayoutAccount";
    ViewData["Title"] = "Đăng ký";
}
<div class="container">
    <div class="panel-register">
        <div class="row">
            <div class="col-md-6 p-0">
                <div class="col-left">
                    <img src="/img/graphic-map.png" alt="">
                </div>
            </div>
            <div class="col-md-6 p-0">
                <div class="col-right">
                    <div class="form-register">
                        <h5 class="text-center">Đăng ký</h5>
                        <form asp-action="RegisterHandle" asp-controller="Account" method="POST">
                            <div class="form-group">
                                <label>Họ tên</label>
                                <input type="text" name="" placeholder="Nhập họ tên"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Nhập số điện thoại">
                                    <div class="input-group-append">
                                        <button class="btn btn-success" type="submit">Gửi mã xác thực</button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mã xác thực</label>
                                <input type="text" name="" placeholder="Nhập mã xác thực gửi tới số điện thoại trên"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="" placeholder="Nhập Email"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input type="password" name="" placeholder="Mật khẩu từ 6 đến 15 ký tự"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Xác thực mật khẩu</label>
                                <input type="password" name="" placeholder="Mật khẩu từ 6 đến 15 ký tự"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Đăng ký</button>
                            </div>
                        </form>
                        <div class="policy">
                            Bằng cách nhấp vào Đăng ký, bạn đồng ý với <a target="_blank" href="#" class="link">
                                Điều
                                khoản
                            </a>, <a target="_blank" href="#" class="link">
                                Chính sách bảo
                                mật
                            </a> của chúng tôi.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>